
type alias USize suffix _sz
     implies U64
     = C<"size_t">;

declare-binop( $"!=", raw-type(USize), raw-type(USize), raw-type(Bool), ( l"("; x; l"!="; y; l")"; ) );
declare-binop( $"==", raw-type(USize), raw-type(USize), raw-type(Bool), ( l"("; x; l"=="; y; l")"; ) );
declare-binop( $"<",  raw-type(USize), raw-type(USize), raw-type(Bool), ( l"("; x; l"<"; y; l")"; ) );
declare-binop( $"<=", raw-type(USize), raw-type(USize), raw-type(Bool), ( l"("; x; l"<="; y; l")"; ) );
declare-binop( $">",  raw-type(USize), raw-type(USize), raw-type(Bool), ( l"("; x; l">"; y; l")"; ) );
declare-binop( $">=", raw-type(USize), raw-type(USize), raw-type(Bool), ( l"("; x; l">="; y; l")"; ) );

declare-binop( $"&", raw-type(USize), raw-type(USize), raw-type(USize), ( l"("; x; l"&"; y; l")"; ) );
declare-binop( $"|", raw-type(USize), raw-type(USize), raw-type(USize), ( l"("; x; l"|"; y; l")"; ) );
declare-binop( $"^", raw-type(USize), raw-type(USize), raw-type(USize), ( l"("; x; l"^"; y; l")"; ) );
declare-binop( $"+", raw-type(USize), raw-type(USize), raw-type(USize), ( l"("; x; l"+"; y; l")"; ) );
declare-binop( $"-", raw-type(USize), raw-type(USize), raw-type(USize), ( l"("; x; l"-"; y; l")"; ) );
declare-binop( $"/", raw-type(USize), raw-type(USize), raw-type(USize), ( l"("; x; l"/"; y; l")"; ) );
declare-binop( $"%", raw-type(USize), raw-type(USize), raw-type(USize), ( l"("; x; l"%"; y; l")"; ) );
declare-binop( $"*", raw-type(USize), raw-type(USize), raw-type(USize), ( l"("; x; l"*"; y; l")"; ) );

declare-unop( $"~", raw-type(USize), raw-type(USize), ( l"((size_t)(~"; x; l"))"; ) );

let min(l: USize, r: USize): USize = (
   if l < r then l else r
);
let max(l: USize, r: USize): USize = (
   if l > r then l else r
);

let cmp(l: USize, r: USize): Ord = (
   if l < r then LessThan
   else if l > r then GreaterThan
   else Equal
);

let .into(i: USize, tt: Type<String>): String = (i as U64).into(type(String));
