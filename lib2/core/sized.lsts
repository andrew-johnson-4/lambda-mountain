
let is(l: t+MustNotRetain, r: t+MustNotRetain): Bool = (
   memcmp(&l as C<"void">[], &r as C<"void">[], sizeof(t) as USize) as U8 == 0
);

let mem-is-non-zero(v: t+MustNotRetain): Bool = (
   let i = 0_sz;
   let r = false;
   while i < sizeof(t) {
      if (&v as U8[])[i] != 0 then r = true;
      i = i + 1;
   };
   r
);
