
let phi-as-state(tt: Type): Type = (
   match tt {
      TAnd{conjugate=conjugate} => (
         let new-conjugate = mk-vector(type(Type));
         for c in conjugate {
            new-conjugate = new-conjugate.push(phi-as-state(c));
         };
         TAnd(new-conjugate);
      );
      TGround{tag:c"Cons",parameters:[t2..t1..]} => t3(c"Cons",t1,t2);
      TGround{} => if tt.is-phi-type then t2(c"Phi::State",tt) else tt;
      _ => tt;
   }
);
