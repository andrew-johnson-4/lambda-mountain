
let .slot(tt: Type, sl: CString): Type = (
   match tt {
      TGround{ tag=tag } => (
         if tag==sl then tt else ta
      );
      TAnd{ conjugate=conjugate } => (
         let return = ta;
         for vector c in conjugate { if not(non-zero(return)) then return = c.slot(sl) };
         return
      );
      _ => ta;
   }
);
