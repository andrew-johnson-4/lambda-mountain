
let validate-pctx-release(tctx: TypeContext?): Nil = (
   let ps-seen = {} : HashtableEq<CString,U64>;
   let local-pctx = tctx.get-or(mk-tctx()).pctx;
   while non-zero(local-pctx) and not(is(local-pctx,global-pctx)) {
      let pr = head(local-pctx);
      if not(ps-seen.has(pr.phi-id)) {
         if pr.phi-tt.is-linear-live
         then exit-error("Linear Variables Must Be Used: #\{pr.phi-id} \{pr.phi-tt} \{pr.blame}", pr.blame);
         ps-seen = ps-seen.bind(pr.phi-id,true);
      };
      local-pctx = tail(local-pctx);
   };
);
