
let union(lctx: Maybe<TypeContext>, rctx: Maybe<TypeContext>): Maybe<TypeContext> = (
   Some(TypeContext( rctx.get-or(mk-tctx()).tctx +
                     lctx.get-or(mk-tctx()).tctx,
                     rctx.get-or(mk-tctx()).pctx +
                     lctx.get-or(mk-tctx()).pctx, false ))
);
